<Window x:Class="msgVersion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="msgVersion" Height="204" Width="636" xmlns:my="clr-namespace:pcl" FontFamily="Microsoft YaHei">
    <Grid Name="panMain">
        <StackPanel>
            <Label Content="版本归类：" FontSize="14" Foreground="Black" Opacity="0.8" />
            <StackPanel Orientation="Horizontal" Margin="0">
                <my:Radiobox x:Name="radioType0" Margin="30,5,10,5" Context="自动" Tag="0" />
                <my:Radiobox x:Name="radioType1" Margin="10,5" Context="不归类" Tag="1" />
                <my:Radiobox x:Name="radioType2" Margin="10,5" Context="折叠" Tag="2" />
                <my:Radiobox x:Name="radioType3" Margin="10,5" Context="老版本" Tag="3" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
