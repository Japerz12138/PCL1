<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:pcl"
    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="formSetup"
    Title="formSystemSetup" FontFamily="Microsoft YaHei" d:DesignHeight="374">
    <Window.Resources>
        <Style TargetType="{x:Type Label}" x:Key="SubTitle">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="15,10,5,0"/>
            <Setter Property="Foreground" Value="#FF5C5C5C"/>
        </Style>
    </Window.Resources>
    <Grid x:Name="panMain" Height="323" Width="740" VerticalAlignment="Top" Background="#01D8D8D8">
        <Grid.Resources>
            <Style TargetType="{x:Type my:Checkbox}">
                <Setter Property="Margin" Value="15,0,0,0"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Width" Value="1000"/>
                <Setter Property="VerticalContentAlignment" Value="Bottom"/>
            </Style>
            <Style TargetType="{x:Type my:Radiobox}">
                <Setter Property="Margin" Value="15,0,0,0"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Width" Value="1000"/>
                <Setter Property="VerticalContentAlignment" Value="Bottom"/>
            </Style>
            <Style TargetType="{x:Type Rectangle}">
                <Setter Property="Height" Value="2"/>
                <Setter Property="Stroke" Value="{DynamicResource ResourceKey=Color4}"/>
                <Setter Property="Margin" Value="0,0,0,2"/>
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <!--防止指向动画-->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBox}">
                            <Themes:ListBoxChrome x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </Grid>
                            </Themes:ListBoxChrome>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <!--样式-->
                <Setter Property="Width" Value="500"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Margin" Value="40,5,0,0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Height" Value="27" />
                <Setter Property="BorderThickness" Value="0,0,0,2" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="SelectionOpacity" Value="0.2" />
                <Setter Property="SelectionBrush" Value="{DynamicResource Color3}" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="3,0,0,0" />
                <Setter Property="BorderBrush" Value="{DynamicResource Color4}" />
            </Style>
            <Style TargetType="{x:Type Label}" x:Key="SubTitle">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Padding" Value="15,10,5,0"/>
                <Setter Property="Foreground" Value="#FF5C5C5C"/>
            </Style>
            <Style TargetType="{x:Type Label}" x:Key="Title">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Padding" Value="10,25,5,5"/>
                <Setter Property="Foreground" Value="{DynamicResource ResourceKey=Color4}"/>
            </Style>
        </Grid.Resources>
        <Grid Height="307" HorizontalAlignment="Left" Margin="100,8,0,0" VerticalAlignment="Top" Width="600" x:Name="panSetupHost">
            <StackPanel x:Name="panBack" VerticalAlignment="Top" Margin="0,-3700,0,0">

                <!---->
                <Label Content="启动设置" Padding="10,5,5,5" Style="{StaticResource Title}"/><Rectangle x:Name="line启动设置"/>

                <my:Checkbox x:Name="chLaunchTopmost" Context="Minecraft 窗口置顶" ToolTip="将 Minecraft 游戏窗口置于其它所有窗口上方。"  Tag="*LaunchTopmost" />
                <my:Checkbox x:Name="chLaunchMending" Context="自动修复缺失的 OptiFine 与 Forge 主文件 *"  Tag="LaunchMending"/>
                <my:Checkbox x:Name="chLaunchNatives" Context="启动时重新解压 Natives 文件 *" ToolTip="（高级设置）关闭此项可以加快游戏启动速度，但是如果文件有变动，游戏可能无法启动。（是 Natives，不是 Naives！）"  Tag="LaunchNatives"/>
                    
                <Label Content="Minecraft 文件夹" Style="{StaticResource SubTitle}" />
                <StackPanel Margin="25,0,0,0" x:Name="panLaunchFolderList" />
                <Grid Height="28" Margin="25,0,0,0" Background="#01FFFFFF" x:Name="btnLaunchFolderAdd"  >
                    <Path Data="F1 M 39,46L 46,46L 46,39L 51,39L 51,46L 58,46L 58,51L 51,51L 51,58L 46,58L 46,51L 39,51L 39,46 Z M 31,25L 38,25L 38,18L 43,18L 43,25L 50,25L 50,30L 43,30L 43,37L 38,37L 38,30L 31,30L 31,25 Z M 18,39L 25,39L 25,32L 30,32L 30,39L 37,39L 37,44L 30,44L 30,51L 25,51L 25,44L 18,44L 18,39 Z " Fill="#FF5C5C5C" Height="18" Margin="15,10,0,0" Stretch="Fill" Width="18" VerticalAlignment="Top" HorizontalAlignment="Left" IsHitTestVisible="False" />
                    <Label Content="添加……" FontFamily="{Binding Parent.Parent.FontFamily, RelativeSource={RelativeSource Self}}"  Height="18"  Padding="9,0,0,0" VerticalContentAlignment="Center"  Foreground="#FF5C5C5C" FontSize="13"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="33,10,0,0" IsHitTestVisible="False" />
                </Grid>

                <Label Content="启动器可见性" Style="{StaticResource SubTitle}"/>
                <StackPanel Margin="25,0,0,0">
                    <my:Radiobox Context="启动游戏后立即关闭" ToolTip="在启动游戏后立即关闭 PCL。这可能会导致部分功能失效（如修改窗口标题、抓取崩溃日志），不建议选择。"  Tag="LaunchVisibility/0" x:Name="raLaunchVisibility0" />
                    <my:Radiobox Context="启动游戏后隐藏，并在 2 分钟后自动关闭" ToolTip="在游戏启动后，PCL 将自动隐藏，并且在 2 分钟后关闭。这既可以减轻 PCL 对游戏性能的影响，也可以使 PCL 的各项功能正常运转。" x:Name="raLaunchVisibility3"  Tag="LaunchVisibility/3" />
                    <my:Radiobox Context="启动游戏后隐藏，并在游戏结束时自动关闭" ToolTip="在游戏启动后，PCL 将自动隐藏，并且在游戏退出时随游戏一起退出。如果你正在进行 Mod 测试等工作，建议选择此项以便于 PCL 抓取崩溃日志。" x:Name="raLaunchVisibility1"  Tag="LaunchVisibility/1" />
                    <my:Radiobox Context="启动游戏后最小化" Tag="LaunchVisibility/4" x:Name="raLaunchVisibility4" />
                    <my:Radiobox Context="保持启动器不变" ToolTip="启动游戏后不隐藏也不关闭启动器，保持原样不变。" x:Name="raLaunchVisibility2"  Tag="LaunchVisibility/2"/>
                </StackPanel>
                <Grid Margin="25,0,0,0"   x:Name="panLaunchVisibility0"   Height="56">
                     <StackPanel Orientation="Vertical" VerticalAlignment="Center"  Height="56" x:Name="panLaunchVisibility02">
                         <my:Checkbox Context="显示游戏日志"  x:Name="chLaunchLog" Tag="LaunchLog"/>
                         <my:Checkbox Context="将游戏日志中的警告信息显示进日志 *"  x:Name="chLaunchLogWarn" Tag="LaunchLogWarn" ToolTip="将 Minecraft 日志输出中含有“warn”字样的条目输出到 PCL 日志。"/>
                     </StackPanel>
                </Grid>
                
                <Label Content="Minecraft 进程优先级" Style="{StaticResource SubTitle}"/>
                <StackPanel Margin="40,0,0,0" Orientation="Horizontal">
                    <my:Radiobox x:Name="raLaunchLevel0" Context="高" Width="150" Margin="0" ToolTip="使 Minecraft 的运算优先运行。这会提高 Minecraft 的性能，但是会导致 Minecraft 以外的程序卡顿。"  Tag="*LaunchLevel/0"/>
                    <my:Radiobox Context="中" Width="150" Margin="0" ToolTip="Minecraft 的运行与其它程序同级，将与其它程序共同使用运算资源。" x:Name="raLaunchLevel1"  Tag="*LaunchLevel/1" />
                    <my:Radiobox Context="低" Width="150" Margin="0" ToolTip="使其它程序的运算优先运行。这让 Minecraft 不会导致其它程序卡顿，但是会使 Minecraft 卡顿。如果你需要挂机，这是不错的选择。" x:Name="raLaunchLevel2"  Tag="*LaunchLevel/2"/>
                </StackPanel>
                
                <Label Content="版本隔离" Style="{StaticResource SubTitle}"/>
                <StackPanel Margin="25,0,0,0">
                    <my:Radiobox x:Name="raLaunchSplit0" Context="不隔离任何版本" ToolTip="所有版本的存档、MOD、资源包等全部通用，有可能导致 MOD 在不同版本之间发生冲突。"  Tag="LaunchSplit/0"/>
                    <my:Radiobox Context="仅隔离 Forge，不隔离其它版本" ToolTip="仅将 Forge 版进行版本隔离，这使得 MOD 间不会发生冲突，非 Forge 版的资源也可以共用。" x:Name="raLaunchSplit1"  Tag="LaunchSplit/1" />
                    <my:Radiobox Context="隔离全部版本" ToolTip="每个版本的存档、MOD、资源包等全部隔离，互不影响。" x:Name="raLaunchSplit2"  Tag="LaunchSplit/2"/>
                </StackPanel>
                
                <Label Content="游戏窗口" Style="{StaticResource SubTitle}"/>
                    <StackPanel Orientation="Horizontal" Margin="25,0,0,0">
                        <my:Radiobox x:Name="raLaunchMode0" Context="窗口" Width="150"  Tag="LaunchMode/0" />
                        <my:Radiobox x:Name="raLaunchMode1" Context="全屏" Width="150" Margin="0"  Tag="LaunchMode/1"/>
                    </StackPanel>
                <Grid x:Name="panLaunchMode1" Height="33" Margin="55,0,0,0">
                    <StackPanel Height="33" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label Content="宽" Style="{StaticResource SubTitle}"  Padding="15,10,15,0"/>
                        <TextBox x:Name="textLaunchModeWindowWidth" Width="155" Margin="0,5,20,0" Tag="=LaunchModeWindowWidth/Integer/200/10000"/>
                        <Label Content="高" Style="{StaticResource SubTitle}"  Padding="15,10,15,0"/>
                        <TextBox x:Name="textLaunchModeWindowHeight" Width="155" Margin="0,5,20,0" Tag="=LaunchModeWindowHeight/Integer/50/5000"/>
                                            <Label Content="重置"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="14" Foreground="{DynamicResource Color4}" Padding="9,0,0,0" Margin="0,1,0,0" Background="#01FFFFFF" x:Name="btnLaunchModeWindowReset" ToolTip="将窗口尺寸更改为默认设置。" Width="0"/>
                    </StackPanel>
                </Grid>

                <Label x:Name="labLaunchSkin" Content="离线模式皮肤" Style="{StaticResource SubTitle}" ToolTip="离线模式下使用的皮肤。只在单人游戏中可见，部分选项只在 1.8 及以上版本中适用。"/>
                    <StackPanel Margin="25,0,0,0">
                        <my:Radiobox x:Name="raLaunchSkin0" Context="随机"    Tag="*LaunchSkin/0"  ToolTip="让 Minecraft 从 Steve 与 Alex 中随机选择皮肤。"/>
                        <my:Radiobox x:Name="raLaunchSkin1" Context="使用 Steve 皮肤"    Tag="*LaunchSkin/1" />
                        <my:Radiobox x:Name="raLaunchSkin2" Context="使用 Alex 皮肤"    Tag="*LaunchSkin/2" />
                        <my:Radiobox x:Name="raLaunchSkin3" Context="使用正版玩家皮肤"   Tag="*LaunchSkin/3"   ToolTip="使用某个正版玩家的皮肤。PCL 将默认加载你的离线用户名对应的皮肤。"/>
                <Grid x:Name="panLaunchSkin3" Height="0"  Margin="25,0,0,0" Opacity="0">
                    <StackPanel Height="33" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label Content="正版玩家用户名" Style="{StaticResource SubTitle}" Padding="15,10,15,0"/>
                        <TextBox x:Name="textLaunchSkinName" Width="355" Margin="0,5,20,0" Tag="*=LaunchSkinName/UserName" ToolTip="这个用户名不一定得是你的用户名。留空将默认视为你的离线用户名。如果没有这个正版玩家，效果则与随机一致。"/>
                    </StackPanel>
                </Grid>
                    </StackPanel>
                
                <Label Content="Java 路径" x:Name="labLaunchJava" Style="{StaticResource SubTitle}" Tag="Java 路径"/>
                <StackPanel Orientation="Horizontal" Width="540" HorizontalAlignment="Left">
                    <TextBox x:Name="textLaunchJava" Tag="*SetupJavaPath/Java" ToolTip="填写 javaw.exe 所在的文件夹。" Width="360"/>
                    <Label Content="手动选择" Width="70" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="14" Foreground="{DynamicResource Color4}" Padding="0" Margin="0,1,0,0" Background="#01FFFFFF" x:Name="btnLaunchJavaHand"/>
                    <Label Content="自动查找" Width="70" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="14" Foreground="{DynamicResource Color4}" Padding="0" Margin="0,1,0,0" Background="#01FFFFFF" x:Name="btnLaunchJavaAuto"/>
                </StackPanel>
                <Label Content="最大内存（MB）" x:Name="labLaunchMaxRam" Style="{StaticResource SubTitle}" Tag="最大内存（MB）"/>
                <TextBox x:Name="textLaunchMaxRam"   Tag="*LaunchMaxRam/Ram/256/32768"/>
                <Label Content="Minecraft 附加信息" x:Name="labLaunchShow" Style="{StaticResource SubTitle}" Tag="Minecraft 附加信息"/>
                <TextBox x:Name="textLaunchShow" ToolTip="它将会显示在 Minecraft 主页面左下角与调试页面左上角。较老的 Minecraft 版本不支持此功能。"  Tag="LaunchShow/NoPush"/>
                <Label Content="Minecraft 窗口标题" x:Name="labLaunchTitle" Style="{StaticResource SubTitle}" Tag="Minecraft 窗口标题"/>
                <TextBox x:Name="textLaunchTitle" Tag="LaunchTitle/Any"/>
                <Label Content="自动进入服务器 *" x:Name="labLaunchServer" Style="{StaticResource SubTitle}" Tag="自动进入服务器 *"/>
                <TextBox x:Name="textLaunchServer" Tag="LaunchServer/Any" ToolTip="（高级设置）在打开 Minecraft 时自动进入该服务器。用英文冒号分割 IP 与端口号。"/>
                <Label Content="Java 虚拟机参数 *"  Style="{StaticResource SubTitle}" x:Name="labLaunchJVM"  Tag="Java 虚拟机参数 *"/>
                <StackPanel Orientation="Horizontal" Width="540" HorizontalAlignment="Left" x:Name="panLaunchJVM">
                    <TextBox x:Name="textLaunchJVM" ToolTip="（高级设置）启动 Minecraft 时所使用的 JVM 优化参数，如果修改错误很可能导致无法启动或游戏崩溃等严重问题。可以设置为空。"  Tag="LaunchJVM/Any" Width="500"/>
                    <Label Content="重置" Width="40" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="14" Foreground="{DynamicResource Color4}" Padding="0" Margin="0,1,0,0" Background="#01FFFFFF" x:Name="btnLaunchJVMReset" ToolTip="将 JVM 参数更改为默认设置。" Tag="-XX:+UseG1GC -XX:-UseAdaptiveSizePolicy -XX:-OmitStackTraceInFastThrow -Dfml.ignoreInvalidMinecraftCertificates=True -Dfml.ignorePatchDiscrepancies=True"/>
                </StackPanel>
                
                <!---->
                <Label Content="界面设置" Style="{StaticResource Title}"/>
                <Rectangle x:Name="line界面设置"/>

                <my:Checkbox Context="打开启动器时显示 Logo"  x:Name="chUiShowLogo" Tag="UiShowLogo" />

                <Label Content="启动器不透明度（%）" x:Name="labUiLauncherOpacity" Style="{StaticResource SubTitle}" Tag="启动器不透明度（%）" />
                <TextBox x:Name="textUiLauncherOpacity" Tag="UiLauncherOpacity/Integer/10/100" />

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="主题" Style="{StaticResource SubTitle}" VerticalAlignment="Top" />
                    <my:Radiobox x:Name="raUiTheme0" Context="龙猫蓝" Width="90" Grid.Row="1" Tag="UiTheme/0" Margin="40,0,0,0" HorizontalAlignment="Left" />
                    <my:Radiobox x:Name="raUiTheme1" Context="玄素黑" Width="90" Grid.Row="1" Tag="UiTheme/1" Margin="130,0,0,0" HorizontalAlignment="Left" />
                    <my:Radiobox x:Name="raUiTheme2" Context="CB 橙" Width="90" Grid.Row="1" Tag="UiTheme/2" Margin="220,0,0,0" HorizontalAlignment="Left" />
                    <my:Radiobox x:Name="raUiTheme3" Context="小草绿" Width="90" Grid.Row="1" Tag="UiTheme/3" Margin="310,0,0,0" HorizontalAlignment="Left" />
                    <my:Radiobox x:Name="raUiTheme4" Context="自定义" Width="90" Grid.Row="1" Tag="UiTheme/4" Margin="400,0,0,0" HorizontalAlignment="Left" />
                    <Label Content="隐藏主题" Style="{StaticResource SubTitle}" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="2"  />
                    <my:Radiobox x:Name="raUiTheme100" Context="？？？" Width="90" Grid.Row="3" Tag="UiTheme/100" Margin="40,0,0,0" HorizontalAlignment="Left" IsEnabled="False" />
                    <my:Radiobox x:Name="raUiTheme101" Context="？？？" Width="90" Grid.Row="3" Tag="UiTheme/101" Margin="130,0,0,0" HorizontalAlignment="Left" IsEnabled="False" />
                </Grid>
                <Grid x:Name="panUiTheme4" Height="0" Opacity="0">
                    <StackPanel VerticalAlignment="Center" Height="58">
                        <Label Content="自定义主题" Style="{StaticResource SubTitle}" VerticalAlignment="Top" />
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" Margin="40,0,0,0" Height="28" HorizontalAlignment="Left" Background="#01FFFFFF" Width="90" x:Name="btnUiCustom1" >
                                <Ellipse Width="17" Height="17" Fill="{DynamicResource Color1}" HorizontalAlignment="Left" Stroke="#FF5C5C5C" StrokeThickness="2" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                                <Label Content="最浅色" FontFamily="{Binding Parent.Parent.FontFamily, RelativeSource={RelativeSource Self}}"  Height="18"  Padding="9,0,0,0" VerticalContentAlignment="Center"  Foreground="#FF5C5C5C" FontSize="13"  VerticalAlignment="Bottom"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Height="28" HorizontalAlignment="Left" Background="#01FFFFFF" Width="90" x:Name="btnUiCustom2">
                                <Ellipse Width="17" Height="17" Fill="{DynamicResource Color2}" HorizontalAlignment="Left" Stroke="#FF5C5C5C" StrokeThickness="2" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                                <Label Content="浅色" FontFamily="{Binding Parent.Parent.FontFamily, RelativeSource={RelativeSource Self}}"  Height="18"  Padding="9,0,0,0" VerticalContentAlignment="Center"  Foreground="#FF5C5C5C" FontSize="13"  VerticalAlignment="Bottom"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Height="28" HorizontalAlignment="Left" Background="#01FFFFFF" Width="90" x:Name="btnUiCustom3">
                                <Ellipse Width="17" Height="17" Fill="{DynamicResource Color3}" HorizontalAlignment="Left" Stroke="#FF5C5C5C" StrokeThickness="2" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                                <Label Content="饱和色" FontFamily="{Binding Parent.Parent.FontFamily, RelativeSource={RelativeSource Self}}"  Height="18"  Padding="9,0,0,0" VerticalContentAlignment="Center"  Foreground="#FF5C5C5C" FontSize="13"  VerticalAlignment="Bottom"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Height="28" HorizontalAlignment="Left" Background="#01FFFFFF" Width="90" x:Name="btnUiCustom4">
                                <Ellipse Width="17" Height="17" Fill="{DynamicResource Color4}" HorizontalAlignment="Left" Stroke="#FF5C5C5C" StrokeThickness="2" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                                <Label Content="深色" FontFamily="{Binding Parent.Parent.FontFamily, RelativeSource={RelativeSource Self}}"  Height="18"  Padding="9,0,0,0" VerticalContentAlignment="Center"  Foreground="#FF5C5C5C" FontSize="13" VerticalAlignment="Bottom" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Height="28" HorizontalAlignment="Left" Background="#01FFFFFF" Width="90" x:Name="btnUiCustom5">
                                <Ellipse Width="17" Height="17" Fill="{DynamicResource Color5}" HorizontalAlignment="Left" Stroke="#FF5C5C5C" StrokeThickness="2" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                                <Label Content="最深色" FontFamily="{Binding Parent.Parent.FontFamily, RelativeSource={RelativeSource Self}}"  Height="18"  Padding="9,0,0,0" VerticalContentAlignment="Center"  Foreground="#FF5C5C5C" FontSize="13" VerticalAlignment="Bottom" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Label Content="背景图片" Style="{StaticResource SubTitle}" />
                <StackPanel Orientation="Horizontal"  Margin="30,0,0,0">
                    <my:Button Height="35" Width="118" Text="设置图片" HorizontalAlignment="Left" Margin="10,8,0,0" x:Name="btnUiBackgroundSet" ToolTip="建议图片大小：740×323。" />
                    <my:Button Height="35" Width="118" Text="重置图片" HorizontalAlignment="Left" Margin="10,8,0,0" ColorType="RED" x:Name="btnUiBackgroundReset"/>
                    <my:Checkbox x:Name="chUiBackground" Visibility="Collapsed" />
                </StackPanel>
                <Grid Margin="25,0,0,0" x:Name="panUiBackground" Height="120">
                    <StackPanel   VerticalAlignment="Center" Height="120" x:Name="panUiBackground2">
                        <Label Content="显示方式" Style="{StaticResource SubTitle}"/>
                        <StackPanel Margin="40,0,0,0" Orientation="Horizontal">
                            <my:Radiobox Context="右下" Width="77" Margin="0" x:Name="raUiBackgroundShow0" Tag="UiBackgroundShow/0" />
                            <my:Radiobox Context="左上" Width="77" Margin="0" x:Name="raUiBackgroundShow1" Tag="UiBackgroundShow/1" />
                            <my:Radiobox Context="右上" Width="77" Margin="0" x:Name="raUiBackgroundShow2" Tag="UiBackgroundShow/2" />
                            <my:Radiobox Context="居中" Width="77" Margin="0" x:Name="raUiBackgroundShow3" Tag="UiBackgroundShow/3" />
                            <my:Radiobox Context="拉伸" Width="77" Margin="0" x:Name="raUiBackgroundShow4" Tag="UiBackgroundShow/4" />
                            <my:Radiobox Context="适应" Width="77" Margin="0" x:Name="raUiBackgroundShow5" Tag="UiBackgroundShow/5" />
                        </StackPanel>
                        <Label Content="背景图片不透明度（%）" x:Name="labUiBackgroundOpacity" Style="{StaticResource SubTitle}" Tag="背景图片不透明度（%）" />
                        <TextBox x:Name="textUiBackgroundOpacity" Width="475" Tag="UiBackgroundOpacity/Integer/0/100" />
                    </StackPanel>
                </Grid>
                <Label Content="从网址下载图片 *" Style="{StaticResource SubTitle}" x:Name="labUiBackgroundURL" Tag="从网址下载图片 *" Padding="40,10,5,0" />
                <TextBox Width="475" ToolTip="（高级设置）每次启动时都在指定的网址处下载图片，并且在下一次打开时更新显示。你可以利用这个功能进行内容的动态显示。" x:Name="textUiBackgroundURL" Tag="UiBackgroundURL/URL" Margin="65,5,0,0" />

                <Label Content="顶部图片" Style="{StaticResource SubTitle}" />
                <StackPanel Orientation="Horizontal"  Margin="30,0,0,0">
                    <my:Button Height="35" Width="118" Text="设置图片" HorizontalAlignment="Left" Margin="10,8,0,0"  x:Name="btnUiBarSet" ToolTip="建议图片大小：740×92。" />
                    <my:Button Height="35" Width="118" Text="重置图片" HorizontalAlignment="Left" Margin="10,8,0,0" ColorType="RED" x:Name="btnUiBarReset"/>
                </StackPanel>
                <Label Content="从网址下载图片 *" Style="{StaticResource SubTitle}" x:Name="labUiBarURL" Tag="从网址下载图片 *" Padding="40,10,5,0" />
